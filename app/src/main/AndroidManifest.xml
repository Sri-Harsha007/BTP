<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elevenstudio.drumit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/game_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/game_logo"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.elevenstudio.drumit.activities.StatsScreen"></activity>
        <activity android:name="com.elevenstudio.drumit.activities.MainMenu" />
        <activity
            android:name="com.elevenstudio.drumit.activities.opening_screen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elevenstudio.drumit.activities.PlayScreen"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent= "AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textViewStyle">@style/AudioWireTextView</item>
        <item name="android:buttonStyle">@style/AudioWireButton</item>
    </style>
    <style name="AudioWireTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/audiowide</item>
    </style>
    <style name="AudioWireButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/audiowide</item>
    </style>

    <style name="MainMenuStyle" parent="@android:style/Widget">
        <item name="android:background">@color/layout_bg_color</item>
    </style>

    <style name="RadioStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#08C3FA</item>
        <item name="colorControlActivated">#2FFFF3</item>
    </style>

    <style name="achievement_style">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#E1FB1C1C</item>
        <item name="stFont">@font/audiowide</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/trans_parent</item>
        <item name="stSolidBackground">false</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
    </style>

    <style name="tutorial_checkbox_theme" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#08C3FA</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#2FFFF3</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">#2FFFF3</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="TutorialCheckbox">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/audiowide</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/power_up_progress</item>
    </style>

</resources>